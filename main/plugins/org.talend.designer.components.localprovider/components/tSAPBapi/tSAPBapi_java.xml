<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.101"
    STATUS="ALPHA"
    
    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20140711A"
    
    STARTABLE="true"
    HAS_CONDITIONAL_OUTPUTS="true"
  >
    <SIGNATURE></SIGNATURE>
  </HEADER>

  <FAMILIES>
	  <FAMILY>Databases/SAP</FAMILY>
	  <FAMILY>Business/SAP</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR MULTI_SCHEMA="true" CTYPE="FLOW" MERGE_ALLOW_DIFFERENT_SCHEMA="true" MIN_OUTPUT="1"/>
   	<CONNECTOR CTYPE="MERGE"/>
	<CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="0" />
	<CONNECTOR CTYPE="SUBJOB_OK" MAX_OUTPUT="0" MAX_INPUT="0" />
	<CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="0" MAX_OUTPUT="0"/>
	<CONNECTOR CTYPE="COMPONENT_OK" MAX_OUTPUT="0" MAX_INPUT="0" />
	<CONNECTOR CTYPE="COMPONENT_ERROR" MAX_OUTPUT="0" MAX_INPUT="0" />
	<CONNECTOR CTYPE="RUN_IF" MAX_OUTPUT="0" MAX_INPUT="0" />
  </CONNECTORS>

  <PARAMETERS>
  	<PARAMETER
    	NAME="NOTE"
    	FIELD="LABEL"
    	NUM_ROW="1"
    >
    	<DEFAULT>(To use this component, you need first to add the SAP Java Connector sapjco3.jar in the Modules view)</DEFAULT>
    </PARAMETER>
  	<PARAMETER NAME="PROPERTY" FIELD="PROPERTY_TYPE" SHOW="true"
			NUM_ROW="5" REPOSITORY_VALUE="SAP" />
	
    <PARAMETER NAME="SERVERTYPE" FIELD="CLOSED_LIST" NUM_ROW="9" GROUP="CONNECTION" >
      		<ITEMS DEFAULT="APPLICATIONSERVER">
        		<ITEM NAME="APPLICATIONSERVER"   VALUE="ApplicationServer" />
        		<ITEM NAME="MESSAGESERVER"   VALUE="MessageServer" />
        	</ITEMS>
    </PARAMETER>			
  	<PARAMETER NAME="CLIENT" FIELD="TEXT" NUM_ROW="10" GROUP="CONNECTION" REQUIRED="true" REPOSITORY_VALUE="CLIENT" >
		<DEFAULT>"000"</DEFAULT>
	</PARAMETER>
  	<PARAMETER NAME="USERID" FIELD="TEXT" NUM_ROW="20" GROUP="CONNECTION" REQUIRED="true" REPOSITORY_VALUE="USERID" >
		<DEFAULT>"TALEND"</DEFAULT>
	</PARAMETER>
  	<PARAMETER NAME="PASSWORD" FIELD="PASSWORD" NUM_ROW="30" GROUP="CONNECTION" REQUIRED="true" REPOSITORY_VALUE="PASSWORD" >
		<DEFAULT>"FRANCE"</DEFAULT>
	</PARAMETER>
  	<PARAMETER NAME="LANGUAGE" FIELD="TEXT" NUM_ROW="40" GROUP="CONNECTION" REQUIRED="true" REPOSITORY_VALUE="LANGUAGE" >
		<DEFAULT>"EN"</DEFAULT>
	</PARAMETER>
  	<PARAMETER NAME="HOSTNAME" FIELD="TEXT" NUM_ROW="50" GROUP="CONNECTION" REQUIRED="true" REPOSITORY_VALUE="HOSTNAME" >
		<DEFAULT>"HOST"</DEFAULT>
	</PARAMETER>
  	<PARAMETER NAME="SYSTEMNUMBER" FIELD="TEXT" NUM_ROW="60" GROUP="CONNECTION" REQUIRED="true" REPOSITORY_VALUE="SYSTEMNUMBER" SHOW_IF="SERVERTYPE=='APPLICATIONSERVER'">
		<DEFAULT>"00"</DEFAULT>
	</PARAMETER>
	<PARAMETER NAME="SYSTEMID" FIELD="TEXT" NUM_ROW="60" GROUP="CONNECTION" REQUIRED="true" SHOW_IF="SERVERTYPE=='MESSAGESERVER'">
		<DEFAULT>"PRD"</DEFAULT>
	</PARAMETER>
	<PARAMETER NAME="GROUPNAME" FIELD="TEXT" NUM_ROW="70" GROUP="CONNECTION" REQUIRED="true" SHOW_IF="SERVERTYPE=='MESSAGESERVER'">
		<DEFAULT>"tGroup"</DEFAULT>
	</PARAMETER>
	
  	<PARAMETER NAME="SAP_FUNCTION" FIELD="TEXT" NUM_ROW="75" REQUIRED="true">
		<DEFAULT>"STFC_CONNECTION"</DEFAULT>
	</PARAMETER>
	
    <!-- pass it to tSAPOut -->
	<PARAMETER NAME="MAPPING_INPUT" FIELD="TABLE" NUM_ROW="80"
		NB_LINES="6" SHOW="true">
		<ITEMS>
			<ITEM NAME="NAME" FIELD="TEXT" />
			<ITEM NAME="TYPE" FIELD="CLOSED_LIST">
				<ITEMS DEFAULT="SINGLE">
					<ITEM NAME="SINGLE" VALUE="SINGLE" />
					<ITEM NAME="STRUCTURE" VALUE="STRUCTURE" />
					<ITEM NAME="TABLE" VALUE="TABLE" />
				</ITEMS>
			</ITEM>
			<ITEM NAME="SCHEMA" FIELD="SCHEMA_TYPE" />
			<ITEM NAME="PARENT_ROW" FIELD="CONNECTION_LIST" FILTER="INPUT:FLOW_MERGE" READONLY_IF="(MAPPING_INPUT.TYPE=='SINGLE') OR (MAPPING_INPUT.TYPE=='STRUCTURE')"/>
		</ITEMS>
	</PARAMETER>
	
	<!-- pass it to tSAPIn -->
    <PARAMETER NAME="SCHEMAS" FIELD="TABLE" NUM_ROW="90" NB_LINES="6" SHOW="true">
	    <ITEMS>
			<ITEM NAME="NAME" FIELD="TEXT" />
			<ITEM NAME="TYPE" FIELD="CLOSED_LIST">
				<ITEMS DEFAULT="SINGLE">
					<ITEM NAME="SINGLE" VALUE="SINGLE" />
					<ITEM NAME="STRUCTURE" VALUE="STRUCTURE" />
					<ITEM NAME="TABLE" VALUE="TABLE" />
				</ITEMS>
			</ITEM>			
		    <ITEM NAME="SCHEMA" FIELD="SCHEMA_TYPE" />
	    </ITEMS>
    </PARAMETER>
    
  </PARAMETERS>
  
  <ADVANCED_PARAMETERS>
	<PARAMETER NAME="SAP_PROPERTIES" FIELD="TABLE" REQUIRED="false" NUM_ROW="1" NB_LINES="3">
		<ITEMS>
			<ITEM NAME="PROPERTY" />
			<ITEM NAME="VALUE" />
		</ITEMS>
	</PARAMETER>  
  </ADVANCED_PARAMETERS>
  
  <CODEGENERATION>
    <TEMPLATES INPUT="TSAPBapi_OUT" OUTPUT="TSAPBapi_IN">

      <TEMPLATE NAME="TSAPBapi_OUT" COMPONENT="tSAPBapiOut">
        <LINK_TO NAME="TSAPBapi_IN" CTYPE="ROWS_END"/>
      </TEMPLATE>
      
      <TEMPLATE NAME="TSAPBapi_IN" COMPONENT="tSAPBapiIn"/>
      
      <TEMPLATE_PARAM SOURCE="self.SERVERTYPE" TARGET="TSAPBapi_OUT.SERVERTYPE" />
      <TEMPLATE_PARAM SOURCE="self.CLIENT" TARGET="TSAPBapi_OUT.CLIENT" />
      <TEMPLATE_PARAM SOURCE="self.USERID" TARGET="TSAPBapi_OUT.USERID" />
      <TEMPLATE_PARAM SOURCE="self.PASSWORD" TARGET="TSAPBapi_OUT.PASSWORD" />
      <TEMPLATE_PARAM SOURCE="self.LANGUAGE" TARGET="TSAPBapi_OUT.LANGUAGE" />
      <TEMPLATE_PARAM SOURCE="self.HOSTNAME" TARGET="TSAPBapi_OUT.HOSTNAME" />
      <TEMPLATE_PARAM SOURCE="self.SYSTEMNUMBER" TARGET="TSAPBapi_OUT.SYSTEMNUMBER" />
      <TEMPLATE_PARAM SOURCE="self.SYSTEMID" TARGET="TSAPBapi_OUT.SYSTEMID" />
      <TEMPLATE_PARAM SOURCE="self.GROUPNAME" TARGET="TSAPBapi_OUT.GROUPNAME" />
      <TEMPLATE_PARAM SOURCE="self.SAP_FUNCTION" TARGET="TSAPBapi_OUT.SAP_FUNCTION" />
      <TEMPLATE_PARAM SOURCE="self.SAP_FUNCTION" TARGET="TSAPBapi_IN.SAP_FUNCTION" />
      
      <TEMPLATE_PARAM SOURCE="self.MAPPING_INPUT" TARGET="TSAPBapi_OUT.MAPPING_INPUT" />
      
      <TEMPLATE_PARAM SOURCE="self.SCHEMAS" TARGET="TSAPBapi_IN.SCHEMAS" />
    </TEMPLATES>
    
    <IMPORTS>
      <IMPORT NAME="sapjco-ntintel-3" MODULE="sapjco3.jar" REQUIRED="true" BundleID="" />
      <IMPORT NAME="sap-api-0.0.1-SNAPSHOT.jar" MODULE="sap-api-0.0.1-SNAPSHOT.jar" REQUIRED="true" BundleID="" />
      <IMPORT NAME="sap-impl-0.0.1-SNAPSHOT.jar" MODULE="sap-impl-0.0.1-SNAPSHOT.jar" REQUIRED="true" BundleID="" />
    </IMPORTS>
  </CODEGENERATION>
  
  <RETURNS/>
  
</COMPONENT>
